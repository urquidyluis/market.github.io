@model Shopping.Data.Entities.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<flash dismissable="true" /> 

<h4>Categoría</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <input type="hidden" asp-for="ProductCategories" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_Category" />

            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
